{
    "include": ["lib", "dist/types"],
    "compilerOptions": {
        "outDir": "dist/types",
        "module": "ES2015",
        "lib": ["dom", "ES2015"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "target": "ES2015",
        "paths": {
            "*": ["lib/*", "node_modules/*"],
            "@xania/mutabl.js": ["../mutabl.js/lib/index.ts"]
        },
        "jsx": "react",
        "esModuleInterop": true
    }
}