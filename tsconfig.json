{
    "include": ["lib", "types"],
    "compilerOptions": {
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "target": "ESNext",
        "paths": {
            "*": ["lib/*", "node_modules/*"]
        },
        "jsx": "react",
        "esModuleInterop": true,
        "typeRoots": ["./types", "./node_modules/@types"],
        "declarationDir": "./dist/types"
    }
}